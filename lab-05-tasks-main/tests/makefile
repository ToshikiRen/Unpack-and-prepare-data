CXX = g++
CXXFLAGS = -g -Wall
EXECUTABLE = tests
SHARED-LIB = lab5
BUILD_FOLDER_PATH = ../build/
LIB_PATH = ../src/libs/
TEST_LIB_PATH = ./libs
BASE_SOURCE_TEST = main.cpp test-utils.cpp

build:
	$(CXX) $(CXXFLAGS) *.cpp -l$(SHARED-LIB) -I$(LIB_PATH) -I$(TEST_LIB_PATH) -L../build -o $(BUILD_FOLDER_PATH)$(EXECUTABLE)

build-c1:
	$(CXX) $(CXXFLAGS) $(BASE_SOURCE_TEST) test-cerinta1.cpp -l$(SHARED-LIB) -I$(LIB_PATH) -I$(TEST_LIB_PATH) -L../build -o $(BUILD_FOLDER_PATH)$(EXECUTABLE)

build-c2:
	$(CXX) $(CXXFLAGS) $(BASE_SOURCE_TEST) test-cerinta2.cpp -l$(SHARED-LIB) -I$(LIB_PATH) -I$(TEST_LIB_PATH) -L../build -o $(BUILD_FOLDER_PATH)$(EXECUTABLE)

build-c3:
	$(CXX) $(CXXFLAGS) $(BASE_SOURCE_TEST) test-cerinta4.cpp -l$(SHARED-LIB) -I$(LIB_PATH) -I$(TEST_LIB_PATH) -L../build -o $(BUILD_FOLDER_PATH)$(EXECUTABLE)


test: build
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$(BUILD_FOLDER_PATH) &&\
	$(BUILD_FOLDER_PATH)$(EXECUTABLE)

test-c1: build-c1
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$(BUILD_FOLDER_PATH) &&\
	$(BUILD_FOLDER_PATH)$(EXECUTABLE)

test-c2: build-c2
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$(BUILD_FOLDER_PATH) &&\
	$(BUILD_FOLDER_PATH)$(EXECUTABLE)

test-c4: build-c3
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$(BUILD_FOLDER_PATH) &&\
	$(BUILD_FOLDER_PATH)$(EXECUTABLE)
